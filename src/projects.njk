---
title: Projects
layout: base.njk
---

<!-- Use collections (plural) and pipe to a proper sort filter -->
{% set projectList = collections.projects | sort(attribute='data.order') %}

<section id="projects" class="min-h-[calc(100vh-48px)] py-32 bg-light flex px-5">
  <div class="container mx-auto flex flex-col md:flex-row items-center md:items-start gap-20">
    
    <!-- Left Column: Title -->
    <h2 class="text-4xl mx-auto md:sticky md:top-32 self-start font-sans md:text-6xl font-bold text-primary md:w-1/3 text-center md:text-left">
      Projects
    </h2>

    <!-- Right Column: Project List -->
    <div class="flex flex-col gap-24 md:w-2/3 max-w-2xl" id="projectList">
      {% for project in projectList %}
      <div class="project-card group">
        <a href="{{ project.url }}" class="block w-full h-full">
          <div class="flex flex-col items-left text-center md:text-left transition-all duration-300 p-8 rounded-2xl bg-white shadow-lg hover:shadow-xl cursor-pointer">
            <h3 class="text-3xl font-sans font-semibold text-dark mb-4 transition-colors duration-300 group-hover:text-primary">{{ project.data.title }}</h3>
            <div class="project-image-container relative overflow-hidden rounded-lg shadow-lg mb-4 transition-all duration-300">
              <img src="{{ project.data.image }}" alt="{{ project.data.title }} Screenshot" class="w-full transition-transform duration-500">
              <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 transition-opacity duration-300"></div>
            </div>
            <p class="text-xl text-gray-700 mt-2 mb-2 transition-colors duration-300 group-hover:text-dark">{{ project.data.description }}</p>
            <div class="inline-flex items-center text-primary font-sans text-xl font-bold mt-2 transition-all duration-300 group-hover:text-teal">
              View Project
              <svg class="w-5 h-5 ml-2 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </div>
          </div>
        </a>
      </div>
      {% endfor %}
      {# <div class="flex flex-col items-center justify-center py-16" id="loadingSpinner">
        <div class="h-10 w-10 border-4 border-primary border-t-transparent rounded-full animate-spin mb-4"></div>
        <p class="text-lg text-gray-600">Loading projects...</p>
      </div> #}
    </div>
  </div>
</section>

<style>
  .project-card:hover .project-image-container img {
    transform: scale(1.05);
  }
  
  .project-card:hover .project-image-container .absolute {
    opacity: 1;
  }
  
  /* Ensure the entire card is clickable */
  .project-card a {
    text-decoration: none;
    color: inherit;
  }
  
  /* Remove focus outline from the card wrapper since the link handles focus */
  .project-card:focus {
    outline: none;
  }
  
  /* Ensure the link gets proper focus styles */
  .project-card a:focus-visible {
    outline: 3px solid #E25A28;
    outline-offset: 3px;
    border-radius: 8px;
  }
</style>