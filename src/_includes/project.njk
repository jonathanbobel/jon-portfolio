---
layout: "base.njk"
title: "{{ title }}"
---

<section class="py-32 bg-light flex items-center justify-center px-8">
  <div class="container mx-auto max-w-4xl">
    
    <h1 class="text-4xl md:text-5xl font-bold text-primary mb-8 font-sans">{{ title }}</h1>
    
    <img src="{{ image }}" alt="{{ title }} Screenshot" class="w-full shadow-lg my-8">

    <!-- <p class="text-lg md:text-xl leading-relaxed text-gray-700 text-xl">{{ description }}</p> -->

    <article class="mt-12 text-left prose prose-lg text-dark text-xl">
      {{ content | safe }}
    </article>

    {% if link %}
      <a href="{{ link }}" class="mt-12 inline-block bg-primary text-white px-8 py-4 rounded-full font-semibold shadow-md hover:bg-opacity-90 transition duration-300 font-sans text-xl">
        Visit Project
      </a>
    {% endif %}

  </div>
</section>